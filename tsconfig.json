{
  "compilerOptions": {
    "baseUrl": "src/",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es2017",
    "strict": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}
